<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/editText_randomCharacter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Hello World"
        android:minHeight="48dp" />

    <View android:layout_height="1dp"
        android:layout_width="100dp"
        android:background="#888"
        android:layout_margin="16dp"/>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

            <Button android:id="@+id/btn_start"
                android:text="START SERVICE"
                android:onClick="startService"
                android:layout_margin="8dp" android:layout_height="48dp" android:layout_width="48dp"/>

            <Button android:id="@+id/btn_stop"
                android:text="STOP SERVICE"
                android:onClick="stopService"
                android:layout_margin="8dp" android:layout_height="48dp" android:layout_width="48dp"/>

            <Button android:id="@+id/btn_next"
                android:text="NEXT ACTIVITY"
                android:onClick="nextActivity"
                android:layout_margin="8dp" android:layout_height="48dp" android:layout_width="48dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
